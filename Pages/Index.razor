            <br style="clear:both;" />
        }
        @if (DataPoints != null && DataPoints.Count > 0)
        {
            <button class="spendchart-btn" style="width:100%" @onclick="@ToggleChartBtn">
                @if (!ShowChart)
                {
                    <h2 style="float:left;">Spending Chart&nbsp;<i class="arrow right"></i></h2>
                }
                else
