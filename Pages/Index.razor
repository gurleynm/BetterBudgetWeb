                    @if (!ShowChart)
                    {
                        <h2>Spending Chart&nbsp;<i class="arrow right"></i></h2>
                    }
                    else
                    {
                        <h2>Spending Chart&nbsp;&nbsp;<i class="arrow down"></i></h2>
